
@model SDME.Web.ViewModels.MenuViewModel

@{
    ViewData["Title"] = "Menú";
}

<div class="container py-4">
    <!-- Header con búsqueda -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold text-danger">
                <i class="fas fa-utensils"></i> @Model.TituloSeccion
            </h1>
        </div>
        <div class="col-md-6">
            <form asp-action="Buscar" method="post" class="d-flex">
                @Html.AntiForgeryToken()
                <input type="text" name="termino" class="form-control" placeholder="Buscar productos..." value="@Model.TerminoBusqueda">
                <button type="submit" class="btn btn-danger ms-2">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar: Categorías -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-list"></i> Categorías
                    </h5>
                </div>
                <div class="list-group list-group-flush">
                    <!-- Todas las categorías -->
                    <a asp-action="Index" 
                       class="list-group-item list-group-item-action @(Model.CategoriaSeleccionadaId == null ? "active" : "")">
                        <i class="fas fa-th"></i> Todas
                    </a>

                    <!-- Lista de categorías -->
                    @foreach (var categoria in Model.Categorias)
                    {
                        <a asp-action="Index" asp-route-categoriaId="@categoria.Id" 
                           class="list-group-item list-group-item-action @(Model.CategoriaSeleccionadaId == categoria.Id ? "active" : "")">
                            <i class="fas fa-tag"></i> @categoria.Nombre
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Productos Grid -->
        <div class="col-md-9">
            @if (!Model.Productos.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3 d-block"></i>
                    <h4>No se encontraron productos</h4>
                    <p>Intenta con otra búsqueda o categoría.</p>
                    <a asp-action="Index" class="btn btn-danger">Ver Todos</a>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var producto in Model.Productos)
                    {
                        <div class="col-md-4">
                            <div class="card h-100 shadow-sm producto-card">
                                <!-- Imagen del producto -->
                                @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                                {
                                    <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-image fa-3x"></i>
                                    </div>
                                }

                                <!-- Badge de disponibilidad -->
                                @if (!producto.Disponible || producto.Stock == 0)
                                {
                                    <span class="position-absolute top-0 end-0 m-2 badge bg-danger">
                                        Sin Stock
                                    </span>
                                }

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@producto.Nombre</h5>
                                    <p class="card-text text-muted small flex-grow-1">
                                        @producto.Descripcion
                                    </p>

                                    <!-- Precio y botones -->
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="h4 text-danger mb-0">
                                                RD$ @producto.Precio.ToString("N2")
                                            </span>
                                            <small class="text-muted">
                                                Stock: @producto.Stock
                                            </small>
                                        </div>

                                        <div class="d-grid gap-2">
                                            @if (producto.Disponible && producto.Stock > 0)
                                            {
                                                <a asp-action="Detalle" asp-route-id="@producto.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-eye"></i> Ver Detalle
                                                </a>
                                                
                                                <form asp-controller="Carrito" asp-action="Agregar" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="productoId" value="@producto.Id" />
                                                    <input type="hidden" name="cantidad" value="1" />
                                                    <button type="submit" class="btn btn-danger btn-sm w-100">
                                                        <i class="fas fa-cart-plus"></i> Agregar al Carrito
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-sm" disabled>
                                                    <i class="fas fa-times"></i> No Disponible
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Contador de productos -->
                <div class="mt-4 text-center text-muted">
                    <p>Mostrando @Model.Productos.Count producto(s)</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Actualizar badge del carrito
        $(document).ready(function() {
            actualizarBadgeCarrito();
        });

        // Animación hover en tarjetas
        $('.producto-card').hover(
            function() { $(this).addClass('shadow-lg'); },
            function() { $(this).removeClass('shadow-lg'); }
        );
    </script>
}
