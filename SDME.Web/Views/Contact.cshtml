@* SDME.Web/Views/Home/Contact.cshtml *@

@{
    ViewData["Title"] = "Contacto";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-danger">
            <i class="fas fa-envelope"></i> Contáctanos
        </h1>
        <p class="lead text-muted">Estamos aquí para atenderte</p>
    </div>

    <div class="row">
        <!-- Formulario de Contacto -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-danger mb-4">
                        <i class="fas fa-comment"></i> Envíanos un Mensaje
                    </h4>
                    
                    <form id="contactForm">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre Completo</label>
                            <input type="text" class="form-control" id="nombre" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input type="tel" class="form-control" id="telefono" placeholder="(809) 555-1234">
                        </div>

                        <div class="mb-3">
                            <label for="asunto" class="form-label">Asunto</label>
                            <select class="form-select" id="asunto" required>
                                <option value="">Seleccionar...</option>
                                <option value="pedido">Consulta sobre Pedido</option>
                                <option value="producto">Información de Productos</option>
                                <option value="sugerencia">Sugerencia</option>
                                <option value="reclamo">Reclamo</option>
                                <option value="otro">Otro</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="mensaje" class="form-label">Mensaje</label>
                            <textarea class="form-control" id="mensaje" rows="5" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-paper-plane"></i> Enviar Mensaje
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Información de Contacto -->
        <div class="col-md-6">
            <!-- Datos de Contacto -->
            <div class="card shadow mb-4">
                <div class="card-body">
                    <h4 class="card-title text-danger mb-4">
                        <i class="fas fa-info-circle"></i> Información de Contacto
                    </h4>

                    <div class="mb-3">
                        <h6><i class="fas fa-map-marker-alt text-danger"></i> Dirección</h6>
                        <p class="text-muted">Av. Winston Churchill #1234<br>Santo Domingo, República Dominicana</p>
                    </div>

                    <div class="mb-3">
                        <h6><i class="fas fa-phone text-danger"></i> Teléfonos</h6>
                        <p class="text-muted">
                            (809) 555-1234<br>
                            (829) 555-5678
                        </p>
                    </div>

                    <div class="mb-3">
                        <h6><i class="fas fa-envelope text-danger"></i> Correo</h6>
                        <p class="text-muted">info@dmendezempanadas.com</p>
                    </div>

                    <div class="mb-3">
                        <h6><i class="fas fa-clock text-danger"></i> Horario</h6>
                        <p class="text-muted">
                            Lunes a Sábado: 8:00 AM - 8:00 PM<br>
                            Domingo: 9:00 AM - 6:00 PM
                        </p>
                    </div>
                </div>
            </div>

            <!-- Redes Sociales -->
            <div class="card shadow">
                <div class="card-body text-center">
                    <h4 class="card-title text-danger mb-4">
                        <i class="fas fa-share-alt"></i> Síguenos
                    </h4>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="btn btn-outline-danger btn-lg">
                            <i class="fab fa-facebook fa-2x"></i>
                        </a>
                        <a href="#" class="btn btn-outline-danger btn-lg">
                            <i class="fab fa-instagram fa-2x"></i>
                        </a>
                        <a href="#" class="btn btn-outline-danger btn-lg">
                            <i class="fab fa-whatsapp fa-2x"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mapa (Opcional) -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body p-0">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3784.3259!2d-69.9312117!3d18.4860575!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTjCsDI5JzA5LjgiTiA2OcKwNTUnNTIuNCJX!5e0!3m2!1sen!2sdo!4v1234567890"
                        width="100%" 
                        height="400" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Manejo del formulario de contacto
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Aquí iría la lógica para enviar el formulario
            alert('Mensaje enviado exitosamente. Te contactaremos pronto.');
            this.reset();
        });
    </script>
}
